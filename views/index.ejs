<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Live Location Tracker</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css"/>
  <style>
    #map {
      height: 100vh;
      width: 100%;
    }
  </style>
</head>
<body>
  <h2 style="text-align:center;">Live Location Tracker (OpenStreetMap)</h2>
  <div id="map"></div>

  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    // Initialize map
    const map = L.map("map").setView([16.704987, 74.243252], 15);

    // Add OSM tiles
    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
      maxZoom: 19,
    }).addTo(map);

    // Marker for user
    let marker = L.marker([16.704987, 74.243252]).addTo(map);

    // Backend endpoint
    const backendURL = "http://localhost:3000/location"; // <-- change to your server

    // Watch user position
    if (navigator.geolocation) {
      navigator.geolocation.watchPosition(
        async (pos) => {
          const lat = pos.coords.latitude;
          const lng = pos.coords.longitude;

          console.log("üìç Current Position:", { lat, lng });

          // Update marker on map
          marker.setLatLng([lat, lng]);
          map.setView([lat, lng]);

          // Send to backend
          try {
            console.log("‚û°Ô∏è Sending request:", { lat, lng });
            const response = await fetch(backendURL, {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ latitude: lat, longitude: lng }),
            });

            const data = await response.json();
            console.log("‚úÖ Backend response:", data);
          } catch (err) {
            console.error("‚ùå Error sending to backend:", err);
          }
        },
        (err) => {
          console.error("‚ö†Ô∏è Geolocation error:", err);
        },
        { enableHighAccuracy: true }
      );
    } else {
      alert("Geolocation not supported in this browser!");
    }
  </script>
</body>
</html>
